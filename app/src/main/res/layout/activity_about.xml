<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent" >

    <LinearLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="com.developer.abhinav_suthar.gallery.About"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/about_feedback"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_margin="6dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    app:srcCompat="@drawable/feedback" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="12dp"
                    android:layout_toEndOf="@+id/imageView"
                    android:text="Send Feedback"
                    android:textSize="18sp"
                    android:textColor="#000"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/about_improve"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_margin="6dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    app:srcCompat="@drawable/improve_app" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="12dp"
                    android:layout_toEndOf="@+id/imageView1"
                    android:text="Improve App"
                    android:textSize="18sp"
                    android:textColor="#000"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/about_about_me"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_margin="6dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    app:srcCompat="@drawable/about_me" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="12dp"
                    android:layout_toEndOf="@+id/imageView2"
                    android:text="About Me"
                    android:textSize="18sp"
                    android:textColor="#000"/>

                <ImageView
                    android:id="@+id/about_whatsAppMe"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:padding="18dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    app:srcCompat="@drawable/whatsapp_icon" />

                <ImageView
                    android:id="@+id/about_callMe"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:padding="22dp"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/about_whatsAppMe"
                    app:srcCompat="@drawable/phone_icon" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:text="Tools :"
            android:textSize="18sp"
            android:textColor="#000"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            android:text="@string/about_tool_1"/>

        <android.support.v7.widget.CardView
            android:id="@+id/about_tool_1"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_margin="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/about_tool_whatsAppMe_num"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp"
                    android:hint="Enter the whatsApp number"
                    android:ems="10"
                    android:inputType="phone" />
                <ImageView
                    android:id="@+id/about_tool_whatsAppMe"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:padding="18dp"
                    app:srcCompat="@drawable/whatsapp_icon" />
            </LinearLayout>

        </android.support.v7.widget.CardView>

